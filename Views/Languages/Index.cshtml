@model IEnumerable<GroupSpace2022.Models.Language>

@{
    ViewData["Title"] = "Talen";
}

<h1>Talen</h1>

<p>
    <a asp-action="Create">Nieuwe taal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cultures)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsShown)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cultures)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsShown)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
